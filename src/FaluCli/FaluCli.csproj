<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <AssemblyName>falu</AssemblyName>
    <Description>Official CLI tool for Falu.</Description>
    <Product>Falu CLI</Product>
  </PropertyGroup>

  <PropertyGroup Condition="'$(RELEASING_CLI)' == 'true'">
    <PublishSingleFile>true</PublishSingleFile>
    <DebugType>None</DebugType>
    <DebugSymbols>false</DebugSymbols>
    <IncludeNativeLibrariesForSelfExtract>true</IncludeNativeLibrariesForSelfExtract>
    <PublishTrimmed>true</PublishTrimmed>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Microsoft.Extensions.Http" Version="5.0.0" />
    <PackageReference Include="System.CommandLine" Version="2.0.0-beta1.21308.1" />
    <PackageReference Include="System.CommandLine.Hosting" Version="0.3.0-alpha.21216.1" />
  </ItemGroup>

  <ItemGroup>
    <ProjectReference Include="..\..\falu-sdk-dotnet\src\FaluSdk\FaluSdk.csproj" />
  </ItemGroup>

</Project>
